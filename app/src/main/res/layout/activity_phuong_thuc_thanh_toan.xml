<?xml version="1.0" encoding="utf-8"?>
<!-- Phương thức thanh toán -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ph_ng_th_c_"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    >
    <RelativeLayout
        android:id="@+id/angle_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/angle_left"
        android:clipToOutline="true" />
    <TextView
        android:id="@+id/thanh_toan"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="27dp"
        android:gravity="center_vertical"
        android:text="@string/thanh_toan"
        android:textAppearance="@style/thanh_toan" />
    <!-- Rectangle 4189 -->
    <View
        android:id="@+id/rectangle_4189"
        android:layout_width="371dp"
        android:layout_height="70dp"
        android:layout_below="@id/thanh_toan"
    android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rectangle_4189" />
    <!-- MoMo e-wallet:****2171 -->
    <TextView
        android:id="@+id/momo_e_wall"
        android:layout_width="238dp"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/rectangle_4189"
        android:layout_alignTop="@+id/rectangle_4189"
        android:layout_centerInParent="true"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical"
        android:text="@string/momo_e_wall"
        android:textAppearance="@style/momo_e_wall" />
    <!-- Rectangle 4190 -->
    <View
        android:id="@+id/rectangle_4190"
        android:layout_width="371dp"
        android:layout_height="230dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="158dp"
        android:background="@drawable/rectangle_4190"
        />
    <!-- Thêm phương thức thanh toán -->
    <TextView
        android:id="@+id/them_pt_thanh_toan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rectangle_4190"

        android:layout_alignTop="@+id/rectangle_4190"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="Thêm phương thức thanh toán"
        android:textAppearance="@style/them_pt_thanh_toan" />
    <!-- credit-card -->
    <!-- Thêm thẻ ngân hàng -->
    <RelativeLayout
        android:id="@+id/credit_card"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="253dp"
        android:background="@drawable/credit_card"
        android:clipToOutline="true" />

    <TextView
        android:id="@+id/them_the_ngan_hang"
        android:layout_width="199dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="254dp"
        android:gravity="center_vertical"
        android:text="Thêm thẻ ngân hàng"
        android:textAppearance="@style/them_the_ngan_hang" />
    <!-- image 6 -->
    <View
        android:id="@+id/momo_icon"
        android:layout_width="30dp"
        android:layout_height="29.22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/momo_icon" />
    <!-- Thêm MoMo e-wallet -->
    <TextView
        android:id="@+id/them_momo_e_wallet"
        android:layout_width="206dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="313dp"
        android:gravity="center_vertical"
        android:text="Thêm Momo E-Wallet"
        android:textAppearance="@style/them_the_ngan_hang" />
</RelativeLayout>